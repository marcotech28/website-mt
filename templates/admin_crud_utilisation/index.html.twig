{% extends 'base.html.twig' %}

{% block title %}Les types d'utilisation
{% endblock %}

{% block body %}
	<h1>Les types d'utilisation</h1>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Libelle</th>
				<th>Image</th>
				<th>Slug</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for utilisation in utilisations %}
				<tr>
					<td>{{ utilisation.id }}</td>
					<td>{{ utilisation.libelle }}</td>
					<td>{{ utilisation.image }}</td>
					<td>{{ utilisation.slug }}</td>
					<td>
						<a href="{{ path('app_admin_crud_utilisation_show', {'id': utilisation.id}) }}">show</a>
						<a href="{{ path('app_admin_crud_utilisation_edit', {'id': utilisation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_crud_utilisation_new') }}">Cr√©er un nouveau type d'utilisation</a>
{% endblock %}
