{% extends 'base.html.twig' %}

{% block title %}Categorie
{% endblock %}

{% block body %}
	<div class="container-xl">
		<h1>Categorie</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ categorie.id }}</td>
				</tr>
				<tr>
					<th>Libelle</th>
					<td>{{ categorie.libelle }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ categorie.slug }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ categorie.description }}</td>
				</tr>
				<tr>
					<th>Rang</th>
					<td>{{ categorie.rang }}</td>
				</tr>
				<tr>
					<th>Meta description</th>
					<td>{{ categorie.metaDesc }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_admin_crud_categorie_index') }}">Retour à la liste des catégories</a>

		<a href="{{ path('app_admin_crud_categorie_edit', {'id': categorie.id}) }}">Modifier cette catégorie</a>

		{{ include('admin_crud_categorie/_delete_form.html.twig') }}
	</div>
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.tiny.cloud/1/l0pzn1807q2e1dmwlw0ejix4dbjl5om7kcztlm43h6k72f8h/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
	<script src="{{ asset('js/tinymce-basic-config.js') }}"></script>
{% endblock %}