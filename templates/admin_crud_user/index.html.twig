{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	<div class="container-fluid admin">
		<h1>User index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					{# <th>Password</th> #}
					<th>Prenom</th>
					<th>Nom</th>
					<th>Telephone</th>
					<th>Pays</th>
					<th>Adresse</th>
					<th>ComplementAdresse</th>
					<th>Ville</th>
					<th>CodePostal</th>
					<th>Newsletter</th>
					<th>NomSociete</th>
					<th>Fonction</th>
					<th>IsConfirmed</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						{# <td>{{ user.password }}</td> #}
						<td>{{ user.prenom }}</td>
						<td>{{ user.nom }}</td>
						<td>{{ user.telephone }}</td>
						<td>{{ user.pays }}</td>
						<td>{{ user.adresse }}</td>
						<td>{{ user.complementAdresse }}</td>
						<td>{{ user.ville }}</td>
						<td>{{ user.codePostal }}</td>
						<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
						<td>{{ user.nomSociete }}</td>
						<td>{{ user.fonction }}</td>
						<td>{{ user.isConfirmed ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_admin_crud_user_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_admin_crud_user_edit', {'id': user.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="17">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_crud_user_new') }}">Create new</a>
	</div>
{% endblock %}
