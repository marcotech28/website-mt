{% extends 'admin.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}

	<div class="container-xl">

		<h1>User</h1>

		<div class="overflow-x:auto;">
			<table class="table ">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user.id }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Roles</th>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>Password</th>
						<td>{{ user.password }}</td>
					</tr>
					<tr>
						<th>Prenom</th>
						<td>{{ user.prenom }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ user.nom }}</td>
					</tr>
					<tr>
						<th>Telephone</th>
						<td>{{ user.telephone }}</td>
					</tr>
					<tr>
						<th>Pays</th>
						<td>{{ user.pays }}</td>
					</tr>
					<tr>
						<th>Adresse</th>
						<td>{{ user.adresse }}</td>
					</tr>
					<tr>
						<th>ComplementAdresse</th>
						<td>{{ user.complementAdresse }}</td>
					</tr>
					<tr>
						<th>Ville</th>
						<td>{{ user.ville }}</td>
					</tr>
					<tr>
						<th>CodePostal</th>
						<td>{{ user.codePostal }}</td>
					</tr>
					<tr>
						<th>Newsletter</th>
						<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
					</tr>
					<tr>
						<th>NomSociete</th>
						<td>{{ user.nomSociete }}</td>
					</tr>
					<tr>
						<th>Fonction</th>
						<td>{{ user.fonction }}</td>
					</tr>
					<tr>
						<th>IsConfirmed</th>
						<td>{{ user.isConfirmed ? 'Yes' : 'No' }}</td>
					</tr>
					<tr>
						<th>Date de création</th>
						<td>
							{% if user.createdAt %}
								{{ user.createdAt|date('d/m/Y H:i') }}
							{% else %}
								Non renseignée
							{% endif %}<br>
						</td>
					</tr>
					<tr>
						<th>Date de consentement</th>
						<td>
							{% if user.consentAt %}
								{{ user.consentAt|date('d/m/Y H:i') }}
							{% else %}
								Non renseignée
							{% endif %}
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<a href="{{ path('app_admin_crud_user_index') }}">back to list</a>

		<a href="{{ path('app_admin_crud_user_edit', {'id': user.id}) }}">edit</a>

		{{ include('admin_crud_user/_delete_form.html.twig') }}
	</div>
{% endblock %}
