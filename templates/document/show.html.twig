{% extends 'admin.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <div class="container-xl">
        <h1>Document</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ document.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ document.name }}</td>
                </tr>
                <tr>
                    <th>Url</th>
                    <td>{{ document.url }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_document_index') }}">back to list</a>

        <a href="{{ path('app_document_edit', {'id': document.id}) }}">edit</a>

        {{ include('document/_delete_form.html.twig') }}
    </div>
{% endblock %}
