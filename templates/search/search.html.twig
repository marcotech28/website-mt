{% extends "base.html.twig" %}

{% block body %}
	<div class="container-xl">
		<h2>Résultat de la recherche pour "{{searchTerm}}"</h2>


		{% if productsFilter is empty %}
			<div class="no-product">
				Aucun produit trouvé.
			</div>

		{% elseif nbProdTotal ==  productsFilter|length %}
			<div class="no-product">
				Veuillez entrer un terme de recherche dans la barre de recherche.
			</div>


		{% else %}
			<div class="row">
				{% for p in productsFilter %}

					<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
						{% include "product/_product_card.html.twig" %}
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</div>
</div>{% endblock %}
