{% extends 'base.html.twig' %}

{% block title %}Liste des avantages
{% endblock %}

{% block body %}
	<div class="container-xl">
		<h1>Les avantages</h1>

		<a href="{{ path('app_admin_crud_avantage_new') }}">Cr√©er un nouvel enregistrement</a>
		<p><br></p>

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libelle</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for avantage in avantages %}
					<tr>
						<td>{{ avantage.id }}</td>
						<td>{{ avantage.libelle }}</td>
						<td>
							<a href="{{ path('app_admin_crud_avantage_show', {'id': avantage.id}) }}">show</a>
							<a href="{{ path('app_admin_crud_avantage_edit', {'id': avantage.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>
{% endblock %}
