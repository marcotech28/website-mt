{% extends 'base.html.twig' %}

{% block title %}Liste des marques
{% endblock %}

{% block body %}

	<div class="container-xl">
		<h1>Liste des marques</h1>
		<a href="{{ path('app_admin_crud_marque_new') }}">Cr√©er une nouvelle marque</a>
		<p><br></p>


		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libelle</th>
					<th>Catalogue</th>
					<th>Logo</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for marque in marques %}
					<tr>
						<td>{{ marque.id }}</td>
						<td>{{ marque.libelle }}</td>
						<td>{{ marque.catalogue }}</td>
						<td>{{ marque.logo }}</td>
						<td>
							<a href="{{ path('app_admin_crud_marque_show', {'id': marque.id}) }}">show</a>
							<a href="{{ path('app_admin_crud_marque_edit', {'id': marque.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
