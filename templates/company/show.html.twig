{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}

    <div class="container-xl mt-3 mb-3">
        <h4>Company</h4>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ company.id }}</td>
                </tr>
                <tr>
                    <th>Nom de l'entreprise</th>
                    <td>{{ company.libelle }}</td>
                </tr>
                <tr>
                    <th>Lien de l'image</th>
                    <td>{{ company.urlImage }}</td>
                </tr>
                <tr>
                    <th>Site internet</th>
                    <td>{{ company.website }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ company.type }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_company_index') }}">Retour à la liste des entreprises partenaires</a>

        <a href="{{ path('app_company_edit', {'id': company.id}) }}">Éditer</a>

        {{ include('company/_delete_form.html.twig') }}
        
    </div>
{% endblock %}
