{% extends 'base.html.twig' %}

{% block title %}Actualités - Marconnet Technologies
{% endblock %}

{% block meta %}
	<meta name="description" content="Découvrez les dernières actualités et nouveautés chez Marconnet Technologies, votre spécialiste de la mobilité sur mesure pour les personnes à mobilité réduite. Restez informé sur nos produits adaptés en suivant nos actualités.">
{% endblock %}

{% block body %}
	<div class="container-xl">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{path('homepage')}}">Accueil</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Actualités</li>
			</ol>
		</nav>

		<div class="actualites">
			{% for index, item in listNews %}
				<h2>
					<a href="{{ path('app_actu_show', {'id' : item.id, 'titreSlug' : item.titreSlug}) }}">{{ item.titre }}</a>
				</h2>
				<p style="padding: 0">{{ item.sousTitre }}</p>
				<p class="date">{{ item.date|date('Y-m-d') }}</p>
				<p class="auteur">{{ item.auteur }}</p>
				{% if index < listNews|length-1 and listNews[index+1] is defined %}
					<div class="separator"></div>
				{% endif %}
			{% endfor %}
		</div>


	</div>
{% endblock %}
