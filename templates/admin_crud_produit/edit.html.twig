{% extends 'admin.html.twig' %}

{% block title %}Mettre à jour un produit{% endblock %}

{% block body %}
    <div class="container-xl mt-3 mb-3" data-new-image-index="{{ form.images|length }}">
        <h1>Mettre à jour un produit</h1>

        {{ include('admin_crud_produit/_form.html.twig', {'button_label': 'Mettre à jour le produit'}) }}

        <a href="{{ path('app_admin_crud_produit_index') }}" class="btn btn-outline-primary mt-2">Retour à la liste des produits</a>

        {{ include('admin_crud_produit/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/images-produits.js') }}"></script>
    <script src="https://cdn.tiny.cloud/1/l0pzn1807q2e1dmwlw0ejix4dbjl5om7kcztlm43h6k72f8h/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
	<script src="{{ asset('js/tinymce-basic-config.js') }}"></script>
{% endblock %}