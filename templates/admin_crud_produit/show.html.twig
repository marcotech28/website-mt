{% extends 'admin.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<div class="container-xl">
		<h1>Produit</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ produit.id }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ produit.description | raw}}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ produit.nom }}</td>
				</tr>
				<tr>
					<th>Prix (€)</th>
					<td>{{ produit.prix }}</td>
				</tr>
				<tr>
					<th>ShortDescription</th>
					<td>{{ produit.shortDescription | raw }}</td>
				</tr>
				<tr>
					<th>META Description</th>
					<td>{{ produit.metaDesc }}</td>
				</tr>
				<tr>
					<th>Video1</th>
					<td>{{ produit.video1 }}</td>
				</tr>
				<tr>
					<th>Video2</th>
					<td>{{ produit.video2 }}</td>
				</tr>
				<tr>
					<th>FicheDescriptive</th>
					<td>{{ produit.ficheDescriptive }}</td>
				</tr>
				<tr>
					<th>Caracteristiques</th>
					<td>{{ produit.caracteristiques }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ produit.slug }}</td>
				</tr>
				<tr>
					<th>Catégorie</th>
					<td>{{ produit.categorie.libelle }}</td>
				</tr>
				<tr>
					<th>Utilisation</th>
					<td>{{ produit.utilisation.libelle }}</td>
				</tr>
				<tr>
					<th>Est-ce un brouillon ?</th>
					<td>{{ produit.isDraft ? 'Oui' : 'Non' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_admin_crud_news_index') }}" class="btn btn-primary">Retour à la liste des produits</a>

		<a href="{{ path('app_admin_crud_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Éditer</a>

		{{ include('admin_crud_produit/_delete_form.html.twig') }}
	</div>
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.tiny.cloud/1/l0pzn1807q2e1dmwlw0ejix4dbjl5om7kcztlm43h6k72f8h/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
	<script src="{{ asset('js/tinymce-basic-config.js') }}"></script>
{% endblock %}