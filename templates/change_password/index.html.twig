{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe
{% endblock %}

{% block body %}
	<div class="container-xl">
		<h1>Je change mon mot de passe</h1>

		{{ form_start(formView) }}

		{{ form_row(formView.oldPassword) }}
		{{ form_row(formView.newPassword) }}

		{{ form_widget(formView.save) }}

		{{ form_end(formView) }}
	</div>
{% endblock %}
