{% extends 'admin.html.twig' %}

{% block title %}Éditer un groupe de produits{% endblock %}

{% block body %}

<div class="container-xl mt-3 mb-3">
    <h1>Modifier le groupe de produit : {{ productGroup.libelle }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.libelle) }}
            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.libelle) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.produits) }}
            <div class="form-check">
                {{ form_widget(form.produits) }}
            </div>
            {{ form_errors(form.produits) }}
        </div>

        <button type="submit" class="btn btn-primary">Mettre à jour</button>
        <a href="{{ path('app_admin_product_group') }}" class="btn btn-secondary">Retour</a>
    {{ form_end(form) }}
</div>

{% endblock %}
